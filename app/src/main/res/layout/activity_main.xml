<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.ronnygep.kuismatematika.MainActivity"
    android:weightSum="1">

    <Button
        android:id="@+id/soalbaru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="0.04"
        android:background="@android:color/holo_green_dark"
        android:onClick="random"
        android:text="Soal Baru"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_weight="0.07"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Angka 1"
                android:textAlignment="center"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/angka1"
                android:layout_width="111dp"
                android:layout_height="63dp"
                android:ems="10"
                android:hint="input angka"
                android:background="@android:color/darker_gray"
                android:inputType="number"
                android:textAlignment="center"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Operator"
                android:textAlignment="center"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/operator"
                android:layout_width="142dp"
                android:layout_height="63dp"
                android:background="@android:color/darker_gray"
                android:ems="10"
                android:hint="Masukan operator"
                android:textAlignment="center"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Angka 2"
                android:textAlignment="center"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/angka2"
                android:layout_width="110dp"
                android:layout_height="63dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/darker_gray"
                android:ems="10"
                android:hint="input angka"
                android:inputType="number"
                android:textAlignment="center" />

        </LinearLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/jawaban"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_weight="0.80"
        android:ems="10"
       android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:hint="masukan jawaban"
        android:inputType="number"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
      android:background="@android:color/background_dark"

        android:textAlignment="center" />

    <Button
        android:id="@+id/cekjawaban"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="0.05"
        android:background="@android:color/holo_purple"
        android:onClick="cekjawaban"
        android:text="Cek Jawaban"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/statusjawaban"
            android:layout_width="108dp"
            android:layout_height="101dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_red_dark"
            android:text="Jawaban anda Benar"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/jawaban_benar"
                android:layout_width="108dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"
                android:text="0"
                android:textAlignment="center"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/jawaban_salah"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray"
                android:text="0"
                android:textAlignment="center"
                android:textSize="34sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="120dp"
                android:layout_height="0dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1.97"
                android:text="Jawaban Benar"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="35dp"
                android:layout_weight="1.14"
                android:text="Jawaban Salah"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="italic"
                />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
